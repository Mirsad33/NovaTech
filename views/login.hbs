<div class="d-flex flex-column align-items-center justify-content-center h-75 ">
    <h1>Login</h1>
   <form class="login-form d-flex flex-column align-items-center justify-content-center gap-2" action="/auth/login" method="POST">
  <div class="mb-3">
    <input name="username" type="text" class="form-control" id="username-login" autocomplete="username" placeholder="Enter your username">
  </div>
  <div class="mb-3">
    <input name="password" type="password" class="form-control" id="password-login" autocomplete="current-password" placeholder="Enter your password">
  </div>
  <button type="submit" class="btn btn-info form-control">Submit</button>
  <a class="text-decoration-none text-info" href="/register">Not a user? click to register</a>
</form>
</div>
<script src="js/login.js"></script>